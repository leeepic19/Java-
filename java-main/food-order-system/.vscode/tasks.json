{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Spring Boot Run",
			"type": "shell",
			"command": "./mvnw spring-boot:run",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Maven Build",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"package"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Run Spring Boot Application",
			"type": "shell",
			"command": "java",
			"args": [
				"-cp",
				"target/classes:target/dependency/*",
				"com.example.FoodOrderSystemApplication"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Spring Boot Application",
			"type": "shell",
			"command": "java",
			"args": [
				"-cp",
				"target/classes;target/dependency/*",
				"com.example.FoodOrderSystemApplication"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}